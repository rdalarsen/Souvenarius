<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <import type="me.worric.souvenarius.ui.main.FabState" />
        <variable
            name="viewmodel"
            type="me.worric.souvenarius.ui.main.MainViewModel" />
        <variable
            name="fabState"
            type="me.worric.souvenarius.ui.main.FabState" />
        <variable
            name="isConnected"
            type="Boolean" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_main_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_headerHeight"
            android:background="@android:color/white">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl_main_headerCollapsingLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|exitUntilCollapsed|snap"
                app:title="@string/app_name"
                app:expandedTitleGravity="start|bottom"
                app:expandedTitleTextAppearance="?attr/textAppearanceTitleHeader"
                app:collapsedTitleTextAppearance="?attr/textAppearanceHeadline5"
                app:titleEnabled="true">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tb_main_headerToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="top"
                    android:theme="@style/ThemeOverlay.MaterialComponents.Light"
                    app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
                    app:layout_collapseMode="pin"
                    app:title="@string/app_name"
                    app:titleTextAppearance="?attr/textAppearanceHeadline5" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main_headerMenuContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_menuBar_size"
                android:minHeight="@dimen/main_menuBar_size"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <TextView
                    android:id="@+id/tv_main_headerNumSouvenirs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textAppearance="?attr/textAppearanceSmallHeader"
                    android:text="Souvenirs: 256" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:id="@+id/iv_main_headerSearchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_menuBar_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="search"
                    app:icon="@drawable/ic_search" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:id="@+id/iv_main_headerSortIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_menuBar_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_main_headerSearchIcon"
                    android:text="sort"
                    app:icon="@drawable/ic_sort" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_fab_add_souvenir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="@{fabState == FabState.HIDDEN ? View.GONE : View.VISIBLE}"
            app:fabSize="normal"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:layout_anchor="@+id/fragment_container"
            app:layout_anchorGravity="bottom|end"
            android:contentDescription="@string/content_desc_main_add_souvenir"
            android:src="@drawable/ic_add_a_photo"
            android:onClick="handleAddFabClicked" />

        <TextView
            android:id="@+id/tv_connection_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="2dp"
            android:text="@string/main_connection_warning"
            android:background="@drawable/connectivity_warning_background"
            android:fontFamily="sans-serif-medium"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
            app:layout_anchor="@+id/fragment_container"
            app:layout_anchorGravity="bottom|start"
            android:clickable="true"
            android:focusable="true"
            android:visibility="@{isConnected ? View.GONE : View.VISIBLE}"
            android:onClick="handleShowConnectionWarningToast" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>