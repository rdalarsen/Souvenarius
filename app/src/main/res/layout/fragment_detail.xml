<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="me.worric.souvenarius.ui.detail.DetailViewModel" />
        <variable
            name="clickHandler"
            type="me.worric.souvenarius.ui.detail.DetailFragment.OnEditClickedListener" />
        <variable
            name="currentSouvenir"
            type="me.worric.souvenarius.data.db.model.SouvenirDb" />
    </data>
    <ScrollView
        android:id="@+id/sv_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        tools:context=".ui.main.MainActivity">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="@{clickHandler::onEditClicked}"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:text="@{currentSouvenir.title}"
                tools:text="@tools:sample/lorem" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_souvenir_photo_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_title"
                tools:listitem="@layout/item_detail_photo" />

            <TextView
                android:id="@+id/tv_detail_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_detail_timestamp"
                app:layout_constraintTop_toBottomOf="@+id/rv_souvenir_photo_list"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:onClick="@{clickHandler::onEditClicked}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@{currentSouvenir.place}"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/tv_detail_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_detail_place"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_detail_place"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="italic"
                android:text="@{currentSouvenir.formattedTimestamp}"
                tools:text="@tools:sample/date/mmddyy" />

            <android.support.constraint.Barrier
                android:id="@+id/barrier_place_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_detail_place,tv_detail_timestamp"
                app:barrierDirection="bottom" />

            <TextView
                android:id="@+id/tv_detail_story"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/barrier_place_timestamp"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="@{clickHandler::onEditClicked}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:fontFamily="sans-serif-light"
                android:text="@{currentSouvenir.story}"
                tools:text="@tools:sample/lorem/random" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>
