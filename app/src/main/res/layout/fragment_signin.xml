<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="isConnected"
            type="Boolean" />
        <variable
            name="clickListener"
            type="me.worric.souvenarius.ui.signin.SignInFragment.SignInButtonClickListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/tv_sign_in_notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_launch_sign_in"
            app:layout_constraintWidth_percent="0.75"
            app:layout_constraintVertical_chainStyle="packed"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="center"
            android:text="@{isConnected ? @string/sign_in_notice : @string/sign_in_notice_no_internet}" />

        <Button
            android:id="@+id/btn_launch_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_in_notice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:enabled="@{isConnected}"
            android:text="@string/btn_label_sign_in"
            android:onClick="@{() -> clickListener.onSignInButtonClicked(isConnected)}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
