<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="souvenir"
            type="me.worric.souvenarius.data.db.model.SouvenirDb" />
        <variable
            name="itemClickListener"
            type="me.worric.souvenarius.ui.main.MainFragment.ItemClickListener" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_souvenir_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{souvenir.title}" />

        <TextView
            android:id="@+id/tv_souvenir_list_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{souvenir.place}" />

        <TextView
            android:id="@+id/tv_souvenir_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{souvenir.formattedTimestamp}" />

        <TextView
            android:id="@+id/tv_souvenir_list_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{souvenir.story}"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_souvenir_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:imageName="@{souvenir.firstPhoto}" />

            <Button
                android:id="@+id/btn_souvenir_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> itemClickListener.onItemClicked(souvenir)}"
                android:text="Details" />

        </LinearLayout>
    </LinearLayout>
</layout>
