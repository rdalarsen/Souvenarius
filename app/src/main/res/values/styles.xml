<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceSmallHeader">@style/CustomHeaderLabel</item>
    </style>

    <!-- TODO: Widget broken. Find out if app widgets work with MaterialComponents themes -->
    <!-- This is for the button in the app widget -->
    <!-- See this SO post for explanation of why we do this: https://stackoverflow.com/a/51413195 -->
    <style name="WidgetColoredButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="CustomHeaderLabel" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/nice_black</item>
    </style>

</resources>
